<%= form_for(@event, :url => {:action => 'update'}) do |e| %>
    <%= e.label :name %>
    <%= e.text_field :name %>
    <%= e.label :description %>
    <%= e.text_area :description %>
    <br>
    <% for user in User.all %>
        <%= check_box_tag "event[user_ids][]", user.id, @event.users.include?(user) %>
        <%= e.label user.first_name%>
        <%= e.label user.last_name %>
    <% end %>
    <%= e.submit "Edit Event" %>
<% end %>