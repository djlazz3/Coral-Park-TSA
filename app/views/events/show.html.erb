<h1><%= @event.name %></h1>
<p><%= @event.description %></p>
<% if current_user.try(:admin) %>
  <%= link_to "Edit", :action => 'edit', :id => @event.id %>
  <%= link_to "Delete", {:action => 'destroy', :id => @event.id}, method: :delete %>
<%end%>
<%= link_to "Back", :action => 'index'%>
<% if @event.users.empty? %>
    <% if current_user.try(:admin)%>
        <h3>You haven't assigned anybody to this event yet, to do so just edit the event</h3>
    <% else %>
        <h3>Nobody is participating in this event yet, if you would like to participate, ask your teacher.</h3>
    <% end %>
<% else %>
    <% @event.users.each do |eu| %>
      <h3><%= eu.first_name.capitalize %> <%= eu.last_name.capitalize %></h3>
    <%end%>
<% end %>
