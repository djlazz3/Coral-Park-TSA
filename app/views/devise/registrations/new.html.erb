<center>
<p class="form_title">Sign up</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, class: "col-md-5 control-label" %>
    <div class="col-md-2">
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-5 control-label" %>
    <div class="col-md-2">
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-5 control-label" %>
    <div class="col-md-2">
     <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-5 control-label" %>
    <div class="col-md-2">
     <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-md-5 control-label" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-md-2">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-md-5 control-label" %>
    <div class="col-md-2">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-success"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>